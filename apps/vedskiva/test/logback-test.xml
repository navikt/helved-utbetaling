<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %highlight(%-5level) %yellow(%logger{36}) %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>

    <logger name="kafka"     level="INFO" additivity="false"><appender-ref ref="stdout"/></logger>
    <logger name="app"       level="INFO" additivity="false"><appender-ref ref="stdout"/></logger>
    <logger name="secureLog" level="TRACE" additivity="false"><appender-ref ref="stdout"/></logger>

</configuration>
